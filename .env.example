# Dane dostępowe do konta e-mail
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASSWORD=password

# Konfiguracja LLM
LLM_API_URL=http://ollama:11434
LLM_MODEL=llama2

# Konfiguracja aplikacji
APP_PORT=8080
DATABASE_PATH=/app/data/emails.db

# Konfiguracja ActiveMQ (opcjonalnie)
ACTIVEMQ_HOST=activemq
ACTIVEMQ_PORT=61616
ACTIVEMQ_USER=admin
ACTIVEMQ_PASSWORD=admin

# Konfiguracja Hawtio (opcjonalnie)
ENABLE_HAWTIO=true

# Opcje logowania
LOG_LEVEL=info

# Konfiguracja środowiska
NODE_ENV=production